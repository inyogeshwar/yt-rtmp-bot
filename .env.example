# ─── Telegram ───────────────────────────────────────────────────────────────
BOT_TOKEN=your_telegram_bot_token_here

# Comma-separated Telegram user IDs that have admin access
ADMIN_IDS=123456789,987654321

# ─── RTMP / YouTube Live ────────────────────────────────────────────────────
DEFAULT_RTMP_URL=rtmp://a.rtmp.youtube.com/live2
DEFAULT_STREAM_KEY=your-stream-key-here

# ─── Google Drive ────────────────────────────────────────────────────────────
# Optional: service-account JSON path or OAuth client secrets
GDRIVE_CREDENTIALS_FILE=credentials.json

# ─── Paths ───────────────────────────────────────────────────────────────────
STORAGE_PATH=./storage
FFMPEG_PATH=ffmpeg
FFPROBE_PATH=ffprobe

# ─── Database ────────────────────────────────────────────────────────────────
DATABASE_URL=sqlite+aiosqlite:///./storage/bot.db

# ─── Rate limiting ───────────────────────────────────────────────────────────
RATE_LIMIT_CALLS=5
RATE_LIMIT_PERIOD=60

# ─── Streaming defaults ──────────────────────────────────────────────────────
DEFAULT_QUALITY=720
DEFAULT_VIDEO_BITRATE=2500k
DEFAULT_AUDIO_BITRATE=128k
DEFAULT_FPS=30

# ─── Background image for audio-only streams ─────────────────────────────────
DEFAULT_BG_IMAGE=./storage/thumbnails/default_bg.jpg

# ─── Logging ─────────────────────────────────────────────────────────────────
LOG_LEVEL=INFO
LOG_FILE=./storage/logs/bot.log
